<style type="text/css">
	.messages {
			text-align: left;
			border:solid black 1px;
			padding:5px;
			width: 200px;
			height: 250px;
			overflow: scroll;

		}

	.left, .right, .riders {
		display: inline-block;
		vertical-align: top;
		margin: 30px;
	}

	textarea {
		width: 206px;
		border-collapse: collapse;
	}
</style>

<div class="left">
	<h2><%= @comp.name %></h2>
	<p>Competition Creator: <%= @comp.user.first_name %> <%= @comp.user.last_name %></p>
	<p>Email: <%= @comp.user.email %></p>
	<p>Date: <%= @comp.date.strftime("%b %d, %Y") %></p>
	<p>Location: <%= @comp.city %>, <%= @comp.state %></p>
	<p>Competition level: <%= @comp.skill %></p>
	<p><form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
<input type="hidden" name="cmd" value="_s-xclick">
<table>
<tr><td><input type="hidden" name="on0" value="Entry Fee">Entry Fee</td></tr><tr><td><select name="os0">
	<option value="Beginner Fee">Beginner Fee $20.00 USD</option>
	<option value="Intermediate Fee">Intermediate Fee $30.00 USD</option>
	<option value="Advanced Fee">Advanced Fee $40.00 USD</option>
</select> </td></tr>
</table>
<input type="hidden" name="currency_code" value="USD">
<input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
">
<input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynow_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>

</p>
<p><small>*No refunds if you choose to backout of competition</small></p>
</div>

<div class="riders">
	<h2>Riders in this Competition</h2>
	<table>
	<tr>
		<th>Name</th>
		<th>Location</th>
		<th>Skill Level</th>
	</tr>
	<% @comp.competidors.each do |person| %>
	<tr>
		<td><%= person.first_name %> <%= person.last_name %></td>
		<td><%= person.city %>, <%= person.state %></td>
		<td><%= person.skill %></td>
	</tr>
	<% end %>
</table>
</div>

<div class="right">
	<div class="messages">
		<% @comp.messages.each do |message| %>
			<p><small><%= message.user.first_name %>: <%= message.content %></small></p>
			<hr>
		<% end %>
	</div>
	<form action="/messages" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
        <input type="hidden" name="message[competition_id]" value="<%= @comp.id %>">

        <textarea name="message[content]"></textarea>

        <p><button type="submit">Send Message</button></p>
    </form>
</div>